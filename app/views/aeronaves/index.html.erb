<p id="notice"><%= notice %></p>

<h1>Lista de Aeronaves</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Numero de Tripulantes</th>
      <th>Tamanho</th>
      <th>Numero</th>
      <th>Chassi</th>
      <th>Quantida de Horas de voo</th>
      <th>Quantida de Motor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aeronaves.each do |aeronafe| %>
      <tr>
        <td><%= aeronafe.nome %></td>
        <td><%= aeronafe.numerotripulantes %></td>
        <td><%= aeronafe.tamanho %></td>
        <td><%= aeronafe.numero %></td>
        <td><%= aeronafe.chassi %></td>
        <td><%= aeronafe.quantidadehorasvoo %></td>
        <td><%= aeronafe.quantidademotor %></td>
        <td><%= link_to 'Visualizar', aeronafe %></td>
        <td><%= link_to 'Editar', edit_aeronafe_path(aeronafe) %></td>
        <td><%= link_to 'Excluir', aeronafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

